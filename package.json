{
    "name": "cinemator-backend",
    "version": "1.0.0",
    "description": "Cinemator",
    "author": "hydrophonixfx@gmail.com & arziburst@gmail.com",
    "private": true,
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "migration:gen": "ts-node ./node_modules/typeorm/cli.js migration:generate -n",
        "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run"
    },
    "dependencies": {
        "@nestjs/common": "^7.0.13",
        "@nestjs/config": "^0.5.0",
        "@nestjs/core": "^7.0.13",
        "@nestjs/graphql": "^7.6.0",
        "@nestjs/platform-express": "^7.4.2",
        "@nestjs/typeorm": "^7.0.0",
        "apollo-server-express": "^2.13.1",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.1",
        "cookie-parser": "^1.4.5",
        "express-rate-limit": "^5.1.3",
        "graphql": "^14.5.8",
        "helmet": "^4.1.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.20",
        "pg": "^7.18.2",
        "reflect-metadata": "^0.1.10",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.5",
        "typeorm": "^0.2.24"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.1.5",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.13",
        "@types/bcryptjs": "^2.4.2",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.6",
        "@types/express": "^4.17.6",
        "@types/express-rate-limit": "^5.1.0",
        "@types/express-session": "^1.17.0",
        "@types/jest": "^25.2.2",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/lodash": "^4.14.157",
        "@types/node": "^12.12.39",
        "@types/supertest": "^2.0.9",
        "@typescript-eslint/eslint-plugin": "^2.33.0",
        "@typescript-eslint/parser": "^2.33.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-babel": "^5.3.0",
        "jest": "^25.5.4",
        "prettier": "^2.0.5",
        "supertest": "^4.0.2",
        "ts-jest": "^25.5.1",
        "ts-loader": "^7.0.4",
        "ts-node": "8.5.2",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.9.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
